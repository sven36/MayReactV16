.demo-page {
  flex: 1;
  flex-direction: column;
  width: 100%;
  background-color: #ffffff;
}
.demo-page .c-flex {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.demo-page .col {
  display: flex;
  flex-direction: column;
}
.demo-page .c-flex__item {
  flex: 1;
}
.demo-page .top-image {
  box-sizing: border-box;
  width: 750rpx;
  height: 184rpx;
  vertical-align: top;
}
.demo-page .nav-wrapper {
  padding: 20rpx;
  font-size: 0;
}
.demo-page .nav-wrapper .radius-top-left {
  border-top-left-radius: 5px;
}
.demo-page .nav-wrapper .radius-top-right {
  border-top-right-radius: 5px;
}
.demo-page .nav-wrapper .radius-bottom-left {
  border-bottom-left-radius: 5px;
}
.demo-page .nav-wrapper .radius-bottom-right {
  border-bottom-right-radius: 5px;
}
.demo-page .nav-wrapper .item-wrapper {
  margin-bottom: 4rpx;
  box-sizing: border-box;
  width: 236rpx;
  font-size: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.demo-page .nav-wrapper .item-wrapper .itemBgc {
  padding: 0 2rpx;
  box-sizing: border-box;
  width: 236rpx;
  height: 137rpx;
}
.demo-page .nav-wrapper .item-wrapper .title {
  font-size: 25rpx;
  color: #fff;
  height: 137rpx;
  margin-top: -137rpx;
  line-height: 137rpx;
}
.demo-page .nav-wrapper .item-wrapper .special-text {
  position: absolute;
  top: 5%;
  left: 4%;
  font-size: 19rpx;
  color: #bd1313;
}
.demo-page .tool-wrapper {
  width: calc(100% - 40rpx);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  padding-bottom: 0rpx;
}
.demo-page .tool-wrapper .tool-item {
  display: inline-flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.demo-page .tool-wrapper .tool-item .image {
  display: block;
  width: 60rpx;
  height: 60rpx;
}
.demo-page .tool-wrapper .tool-item .text {
  font-size: 22rpx;
}
.demo-page .special-offer {
  display: flex;
  flex-direction: column;
}
.demo-page .special-offer .title {
  font-size: 35rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.demo-page .special-offer-wrapper {
  height: 130rpx !important;
  display: flex;
  flex-direction: row;
  margin: 0 20rpx;
  width: calc(100% - 40rpx);
}
.demo-page .special-offer-item {
  height: 130rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.demo-page .special-offer-image {
  display: block;
  width: 230rpx;
  height: 130rpx;
  border-radius: 4px;
}
.demo-page .special-offer-text {
  color: #fff;
  font-size: 26rpx;
  margin-top: -120rpx;
  margin-left: -100rpx;
}
.demo-page .activity {
  display: flex;
  flex-direction: column;
  padding-bottom: 40rpx;
}
.demo-page .activity .title {
  font-size: 35rpx;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.demo-page .activity .activity-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 0 20rpx;
  width: calc(100% - 40rpx);
}
.demo-page .activity .activity-wrapper .left-content,
.demo-page .activity .activity-wrapper .right-content {
  align-items: center;
}
.demo-page .activity .activity-wrapper .left-content {
  display: inline-flex;
  flex-direction: column;
}
.demo-page .activity .activity-wrapper .left-content .image {
  display: block;
  box-sizing: border-box;
  width: 350rpx;
  height: 360rpx;
  border-radius: 4px;
  border: 1px solid #e4e3e3;
}
.demo-page .activity .activity-wrapper .left-content .desc {
  color: #0674f3;
}
.demo-page .activity .activity-wrapper .left-content .activity-content {
  padding-left: 10rpx;
  padding-top: 10rpx;
  background-color: transparent;
  display: flex;
  flex-direction: column;
  height: 360rpx;
  width: 350rpx;
  margin-top: -360rpx;
  box-sizing: border-box;
}
.demo-page .activity .activity-wrapper .left-content .activity-content .title {
  display: block;
  font-size: 28rpx;
  margin: 0;
}
.demo-page .activity .activity-wrapper .left-content .activity-content .desc {
  display: block;
  font-size: 20rpx;
  color: #aa9f6f;
}
.demo-page .activity .activity-wrapper .right-content {
  display: inline-flex;
  flex-direction: column;
}
.demo-page .activity .activity-wrapper .right-content .right-content-wrapper {
  display: flex;
  flex-direction: column;
}
.demo-page .activity .activity-wrapper .right-content .first-child {
  margin-bottom: 10rpx;
}
.demo-page .activity .activity-wrapper .right-content .image {
  box-sizing: border-box;
  display: block;
  width: 350rpx;
  height: 175rpx;
  border-radius: 4px;
  border: 1px solid #e4e3e3;
}
.demo-page .activity .activity-wrapper .right-content .activity-content {
  padding-left: 10rpx;
  padding-top: 10rpx;
  background-color: transparent;
  height: 175rpx;
  width: 350rpx;
  margin-top: -175rpx;
  box-sizing: border-box;
}
.demo-page .activity .activity-wrapper .right-content .activity-content .title {
  display: block;
  font-size: 28rpx;
  margin: 0;
}
.demo-page .activity .activity-wrapper .right-content .activity-content .desc {
  display: block;
  font-size: 20rpx;
  color: #aa9f6f;
}