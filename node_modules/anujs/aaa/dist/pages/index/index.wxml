
    <view class="demo-page">
        <image mode="aspectFit" class="top-image" src="https://s.qunarzz.com/wechatapp/home/banner0510-002.png" />
        <view class="nav-wrapper c-flex">
            <block wx:for="{{state.indexPageIcons}}" wx:for-item="item" wx:for-index="i6504" wx:key="*this">
                <view class='item-wrapper' bindtap="dispatchEvent" data-tap-uid="{{'e187_30_' + i6504}}" data-beacon-uid="default">
                    <image src="{{item.logoSrc}}" class="itemBgc {{item.class}}" /><text class="title">{{item.bizTitle}}</text>
                    <block wx:if="{{item.showSpecialLogo && item.specialText.length}}">
                        <view class="special-text">{{item.specialText}}</view>
                    </block>
                    <block wx:elif="true">{{''}}</block>
                </view>
            </block>
        </view>
        <view class="tool-wrapper">
            <block wx:for="{{state.toolData}}" wx:for-item="item" wx:for-index="index" wx:key="*this">
                <view bindtap="dispatchEvent" class="tool-item" data-tap-uid="{{'e203_31_' + index}}" data-beacon-uid="default">
                    <image class="image" src="{{item.url}}" /><text class="text">{{item.title}}</text></view>
            </block>
        </view>
        <view class="special-offer anu-block"><text class="title">特价专区</text>
            <swiper class="special-offer-wrapper" interval="{{2500}}" autoplay="{{true}}" displayMultipleItems="{{3}}">
                <block wx:for="{{state.specialOfferData}}" wx:for-item="item" wx:for-index="i8100" wx:key="*this">
                    <swiper-item bindtap="dispatchEvent" class="special-offer-item anu-block" data-tap-uid="{{'e220_47_' + i8100}}" data-beacon-uid="default">
                        <image class="special-offer-image" src="{{item.url}}" /><text class="special-offer-text">{{item.title}}</text></swiper-item>
                </block>
            </swiper>
        </view>
        <view class="activity anu-block"><text class="title">活动专区</text>
            <view class="activity-wrapper">
                <view bindtap="dispatchEvent" class="left-content" data-tap-uid="e231_27" data-beacon-uid="default">
                    <image class="image" src="https://img1.qunarzz.com/order/comp/1808/c3/dda9c77c3b1d8802.png" />
                    <view class="activity-content"><text><text class="title">何时飞</text><text class="desc">机票趋势早知道</text></text></view>
                </view>
                <view class="right-content">
                    <view bindtap="dispatchEvent" class="right-content-wrapper first-child" data-tap-uid="e241_31" data-beacon-uid="default">
                        <image class="image" src="https://img1.qunarzz.com/order/comp/1808/3b/fd717d94ed8b6102.jpg" />
                        <view class="activity-content"><text class="title">人格测试</text><text class="desc">简直惊悚</text></view>
                    </view>
                    <view bindtap="dispatchEvent" class="right-content-wrapper" data-tap-uid="e251_31" data-beacon-uid="default">
                        <image class="image" src="https://img1.qunarzz.com/order/comp/1806/1c/61cd118da20ec702.jpg" />
                        <view class="activity-content anu-block"><text class="title">飞行宝贝</text><text class="desc">榜单有礼</text></view>
                    </view>
                </view>
            </view>
        </view>
    </view>
