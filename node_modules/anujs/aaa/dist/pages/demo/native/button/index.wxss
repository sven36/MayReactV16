@import '../../../../assets/global.wxss';

.quick-container {
  display: flex;
  flex-direction: column;
}

.quick-button {
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 18px;
  text-align: center;
  text-decoration: none;
  line-height: 46px;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  color: #000000;
  background-color: #F8F8F8;
  margin-top: 12px;
}

.primary {
  color: #FFFFFF;
  background-color: #1AAD19;
}
.primary:active {
  color: #FFFFFF;
  background-color: #179716;
}
.primary:disabled {
  color: #FFFFFF;
  background-color: #cdf8cd;
}
.primary-plain {
  color: #1AAD19;
  border: 1rpx solid #1AAD19;
  background-color: transparent;
}
.primary-plain:active {
  color: #32e131;
  border: 1rpx solid #32e131;
}
.primary-plain:disabled {
  color: gray;
  border: 1rpx solid gray;
}

.warning {
  color: #FFFFFF;
  background-color: #E64340;
}
.warning:active {
  color: #FFFFFF;
  background-color: #e32d29;
}
.warning:disabled {
  color: #FFFFFF;
  background-color: #f29c9a;
}
.warning-plain {
  color: #E64340;
  border: 1rpx solid #E64340;
  background-color: transparent;
}
.warning-plain:active {
  color: #ef8684;
  border: 1rpx solid #ef8684;
}
.warning-plain:disabled {
  color: gray;
  border: 1rpx solid gray;
}

.default:active {
  background-color: #ebebeb;
}
.default-plain {
  color: #000000;
  border: 1rpx solid #000000;
  background-color: transparent;
}
.default-plain:active {
  color: #4d4d4d;
  border: 1rpx solid #4d4d4d;
}
.default-plain:disabled {
  color: gray;
  border: 1rpx solid gray;
}