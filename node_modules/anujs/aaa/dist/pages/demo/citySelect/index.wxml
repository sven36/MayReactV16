
    <view class='city-select'>
        <view class='search-wrapper'><input class="input" type='text' placeholder='搜索目的地' />
            <image class="image" src='../../../assets/image/search.png' />
        </view>
        <block wx:if="{{state.isSearch}}">
            <view class='search-container'>
                <block wx:for="{{state.searchResult}}" wx:for-item="item" wx:for-index="i2016" wx:key="*this">
                    <view class='search-result-item'>{{item}}</view>
                </block>
            </view>
        </block>
        <block wx:elif="true">
            <view class='city-wrapper'>
                <block wx:for="{{state.data}}" wx:for-item="item" wx:for-index="i2442" wx:key="*this">
                    <view class='city-item-wrapper'>
                        <view class='title'>{{item.title}}</view>
                        <view class='city-item'>
                            <block wx:for="{{item.data}}" wx:for-item="item" wx:for-index="i2853" wx:key="*this">
                                <view bindtap="dispatchEvent" class="item" data-tap-uid="{{'e90_64_' + i2442 + '-' + i2853}}" data-beacon-uid="default"><text>{{item}}</text></view>
                            </block>
                        </view>
                    </view>
                </block>
            </view>
        </block>
    </view>
