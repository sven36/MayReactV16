
    <view class="ticket-page" style="{background-color: #feb64e}">
        <image class="sreach_bg" mode="scaleToFill" src="http://picbed.qunarzz.com/image/b96f82f01ef5850d50e93ea511f618fa.png" />
        <view style="{top: -15px}" class="search-container  anu-block">
            <view class="citySelector">
                <view bindtap="dispatchEvent" class="cityTap" data-tap-uid="e84_27" data-beacon-uid="default"><text class='depCityContent'>{{state.depCity}}</text></view>
                <view class="city_change">
                    <image class="exchange-logo" src="../../../assets/image/train_icon.png" />
                    <image class='exchange-btn' src="../../../assets/image/search_btn.png" />
                </view>
                <view bindtap="dispatchEvent" class="cityTap flex-right" data-tap-uid="e98_27" data-beacon-uid="default"><text class='arrCityContent'>{{state.arrCity}}</text></view>
            </view>
            <view bindtap="dispatchEvent" class="dateSelector" data-tap-uid="e103_23" data-beacon-uid="default"><text>{{state.displayDate}}</text><text class="date-week-text">{{state.dateWeek}}</text></view>
            <view class="switch-content">
                <view class="switch-label">
                    <image class="hight-speed" mode="scaleToFill" src="../../../assets/image/train_highSpeed.png" /><text class="switch-context {{state.isOnlyGaotie ? 'switch-label-check' : 'switch-label-uncheck'}}">只查看高铁/动车</text></view>
                <switch class="switch" checked="{{state.isOnlyGaotie}}" bindchange="dispatchEvent" color="#00bcd4" data-change-uid="e124_26" data-beacon-uid="default" />
            </view><text bindtap="dispatchEvent" class="search-button" data-tap-uid="e129_24" data-beacon-uid="default">搜 索</text>
            <view class="actions-container">
                <view bindtap="dispatchEvent" class="order-action" data-tap-uid="e134_27" data-beacon-uid="default"><text class="action-text">我的订单</text></view>
                <view class="seprator" />
                <view bindtap="dispatchEvent" class="feedback-action" data-tap-uid="e138_27" data-beacon-uid="default"><text class="action-text">咨询反馈</text></view>
            </view>
        </view>
        <view class="welfare-entrance">
            <view class="welfare-content">
                <view bindtap="dispatchEvent" class="welfare-action" data-tap-uid="e146_27" data-beacon-uid="default">
                    <image class="welfare-icon" src="http://s.qunarzz.com/open_m_train/miniprogram/home_redpack.png" /><text class="action-text">优惠拼团</text></view>
                <view class="seprator"></view>
                <view bindtap="dispatchEvent" class="welfare-action" data-tap-uid="e154_27" data-beacon-uid="default">
                    <image class="welfare-icon" src="http://s.qunarzz.com/open_m_train/miniprogram/home_welfare.png" /><text class="action-text">我的福利</text></view>
            </view>
        </view>
    </view>
