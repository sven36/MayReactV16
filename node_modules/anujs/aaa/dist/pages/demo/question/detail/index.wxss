page {
  background-color: #fff;
}

.detail-page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.detail-page .question-detail {
  padding: 20rpx 0rpx;
  border-bottom: 10rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
}
.detail-page .question-detail .title {
  font-size: 30rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
  color: #000;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.detail-page .question-detail .city {
  display: inline-block;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  padding: 2rpx 10rpx;
  line-height: 30rpx;
  border-radius: 18rpx;
  border: 1px solid #d3d2d2;
  font-size: 22rpx;
  color: dimgray;
}
.detail-page .question-detail .other-infortion {
  align-self: stretch;
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 0;
}
.detail-page .question-detail .other-infortion .image {
  vertical-align: top;
  display: inline-block;
  margin-right: 15rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}
.detail-page .question-detail .other-infortion .userName {
  display: inline-block;
  margin-right: 15rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  color: dimgray;
}
.detail-page .question-detail .other-infortion .post-date {
  display: inline-block;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #b4b3b3;
}
.detail-page .question-detail .other-infortion .eye-wrapper {
  font-size: 0;
}
.detail-page .question-detail .other-infortion .eye-wrapper .image {
  vertical-align: top;
  display: inline-block;
  margin-right: 10rpx;
  width: 32rpx;
  height: 32rpx;
}
.detail-page .question-detail .other-infortion .eye-wrapper .eye-num {
  display: inline-block;
  line-height: 32rpx;
  font-size: 22rpx;
  color: #b4b3b3;
}
.detail-page .question-prompt {
  align-self: stretch;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  padding-top: 5px;
  margin-bottom: 37rpx;
  font-size: 23rpx;
  color: #b4b3b3;
}
.detail-page .question-prompt > .text {
  float: left;
}
.detail-page .question-prompt > .text::before {
  visibility: hidden;
  content: "";
  clear: both;
}
.detail-page .question-prompt .sort-wrapper {
  float: right;
  color: dimgray;
}
.detail-page .question-prompt .sort-wrapper::after {
  visibility: hidden;
  content: "";
  clear: both;
}
.detail-page .question-prompt .sort-wrapper .image {
  vertical-align: top;
  display: inline-block;
  margin-right: 7rpx;
  width: 32rpx;
  height: 32rpx;
}
.detail-page .question-prompt .sort-wrapper .text {
  line-height: 32rpx;
}
.detail-page .answer-wrapper {
  align-self: stretch;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: flex-start;
  padding: 20rpx 30rpx;
  border-top: 1px solid #f0f0f0;
}
.detail-page .answer-wrapper .user-wrapper {
  margin-bottom: 20rpx;
}
.detail-page .answer-wrapper .user-wrapper .image {
  vertical-align: top;
  margin-right: 20rpx;
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}
.detail-page .answer-wrapper .user-wrapper .name-time {
  display: inline-block;
}
.detail-page .answer-wrapper .user-wrapper .name-time .text-name {
  display: block;
  line-height: 50rpx;
  font-size: 25rpx;
  color: dimgray;
}
.detail-page .answer-wrapper .user-wrapper .name-time .time {
  display: block;
  line-height: 30rpx;
  font-size: 22rpx;
  color: #b4b3b3;
}
.detail-page .answer-wrapper .answer-desc {
  font-size: 25rpx;
  color: #000;
  margin-bottom: 20rpx;
}
.detail-page .answer-wrapper .agree-with-wrapper {
  align-self: flex-end;
  padding: 0 12rpx;
  padding-top: 5rpx;
  border-radius: 25rpx;
  font-size: 0;
  border: 1rpx solid #d3d2d2;
}
.detail-page .answer-wrapper .agree-with-wrapper .image {
  vertical-align: top;
  display: inline-block;
  margin-right: 7rpx;
  width: 28rpx;
  height: 28rpx;
}
.detail-page .answer-wrapper .agree-with-wrapper .text {
  font-size: 24rpx;
  color: #b4b3b3;
}