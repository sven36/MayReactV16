page {
  height: 100%;
  background-color: #f0f0f0;
}

.row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.col {
  display: flex;
  flex-direction: column;
}

.question {
  display: flex;
  flex-direction: column;
  flex: 1;
  height: 100%;
}
.question .nav-wrapper {
  z-index: 999;
  width: 100%;
  padding: 0 30rpx;
  padding-bottom: 5rpx;
  background-color: #fff;
}
.question .nav-wrapper .nav-btn {
  margin-right: 50rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #000;
  display: flex;
  align-items: center;
  flex-direction: row;
}
.question .nav-wrapper .nav-btn:last-child {
  margin-right: 0;
}
.question .nav-wrapper .nav-btn .open-icon-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 60rpx;
  height: 40rpx;
}
.question .nav-wrapper .nav-btn .open-icon {
  margin-left: 10rpx;
  width: 25rpx;
  height: 15rpx;
}
.question .nav-wrapper .active {
  color: #22a0fa;
}
.question .nav-wrapper .switch-bar {
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #22a0fa;
  transition: all 250ms ease;
}
.question .first-choose {
  width: 110rpx;
  transform: translateX(0rpx);
}
.question .second-choose {
  width: 80rpx;
  transform: translateX(155rpx);
}
.question .third-choose {
  width: 80rpx;
  transform: translateX(270rpx);
}
.question .quest-content {
  background-color: #ffffff;
  height: 100%;
}
.question .quest-content .my-question-answer {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  height: 100%;
}
.question .quest-content .my-question-answer .tool {
  padding: 0 30rpx;
  border-bottom-style: solid;
  border-bottom-width: 1px;
  border-bottom-color: #f0f0f0;
  line-height: 60rpx;
  font-size: 22rpx;
  letter-spacing: 1rpx;
  color: #c5c3c3;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.question .quest-content .my-question-answer .tool .switch-wrapper {
  line-height: 60rpx;
}
.question .quest-content .my-question-answer .no-data-prompt {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: -100rpx;
}
.question .quest-content .my-question-answer .no-data-prompt .image {
  display: block;
  margin-bottom: 30rpx;
  width: 180rpx;
  height: 101rpx;
}
.question .quest-content .my-question-answer .no-data-prompt .message {
  font-size: 22rpx;
  letter-spacing: 1rpx;
  color: #c5c3c3;
}
.question .quest-content .question-item {
  padding: 20rpx 30rpx;
  padding-top: 40rpx;
  border-bottom: 1px solid #f0f0f0;
  background-color: #fff;
  font-size: 0;
}
.question .quest-content .question-item .remark {
  display: inline-block;
  padding: 0 12rpx;
  margin-right: 15rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-weight: 700;
  vertical-align: top;
}
.question .quest-content .question-item .hot {
  background-color: #ffccc7;
  color: #f5222d;
}
.question .quest-content .question-item .stick {
  background-color: #ffe7ba;
  color: #fa8c16;
}
.question .quest-content .question-item .new {
  background-color: #bae7ff;
  color: #1890ff;
}
.question .quest-content .question-item .width {
  width: 600rpx;
}
.question .quest-content .question-item .title {
  font-size: 30rpx;
  letter-spacing: 1rpx;
  font-weight: 700;
  width: calc(100% - 10rpx);
}
.question .quest-content .question-item .desc {
  margin-top: 20rpx;
  font-size: 22rpx;
  letter-spacing: 1rpx;
  color: #afaeae;
}
.question .quest-content .question-item .hide-text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.question .quest-content .question-item .other-message {
  font-size: 0;
  display: flex;
  justify-content: flex-end;
}
.question .quest-content .question-item .other-message .other-message-item {
  align-items: center;
  margin-right: 20rpx;
  font-size: 0;
}
.question .quest-content .question-item .other-message .other-message-item:last-child {
  margin-right: 0;
}
.question .quest-content .question-item .other-message .other-message-item .image {
  margin-right: 10rpx;
  width: 25rpx;
  height: 25rpx;
  vertical-align: top;
}
.question .quest-content .question-item .other-message .other-message-item .image.eye {
  width: 32rpx;
  height: 32rpx;
}
.question .quest-content .question-item .other-message .other-message-item .eye-text {
  line-height: 32rpx;
}
.question .quest-content .question-item .other-message .other-message-item .text {
  line-height: 25rpx;
  font-size: 20rpx;
  color: #afaeae;
}