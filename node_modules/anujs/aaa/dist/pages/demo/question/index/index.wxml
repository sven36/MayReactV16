
    <view class="question">
        <view class="nav-wrapper" style="{{props['style3887'] }}">
            <view class=" row"><text bindtap="dispatchEvent" class="nav-btn {{state.navBtnActiveIndex === 0 ? 'active' : ''}}" data-tap-uid="e75_26" data-beacon-uid="default">我的问答</text><text bindtap="dispatchEvent" class="nav-btn {{state.navBtnActiveIndex === 1 ? 'active' : ''}}" data-tap-uid="e81_26" data-beacon-uid="default">推荐</text>
                <view class="nav-btn"><text bindtap="dispatchEvent" class="{{state.navBtnActiveIndex === 2 ? 'active' : ''}}" data-tap-uid="e87_32" data-beacon-uid="default">{{state.city}}</text>
                    <view bindtap="dispatchEvent" class="open-icon-wrapper" data-tap-uid="e88_31" data-beacon-uid="default">
                        <block wx:if="{{state.navBtnActiveIndex === 2}}">
                            <image class="open-icon image" src="../../../../assets/image/open_select.png" />
                        </block>
                        <block wx:elif="true">
                            <image class="open-icon image" src="../../../../assets/image/open.png" />
                        </block>
                    </view>
                </view>
            </view>
            <view class="switch-bar {{state.navBtnActiveIndex === 1 ? 'second-choose' : state.navBtnActiveIndex === 0 ? 'first-choose' : 'third-choose'}}" />
        </view>
        <view class="quest-content" style="{{props['style7413'] }}">
            <block wx:if="{{state.navBtnActiveIndex === 0}}">
                <view class="my-question-answer">
                    <view class="tool">
                        <view>
                            <block wx:if="{{state.isQuestion}}">{{'共有0个提问'}}</block>
                            <block wx:elif="true">{{'共有0个回答'}}</block>
                        </view>
                        <view bindtap="dispatchEvent" class="switch-wrapper" data-tap-uid="e113_35" data-beacon-uid="default">
                            <view>
                                <block wx:if="{{state.isQuestion}}">{{'切换至回答'}}</block>
                                <block wx:elif="true">{{'切换至提问'}}</block>
                            </view>
                        </view>
                    </view>
                    <view class="no-data-prompt">
                        <image class="image" src="../../../../assets/image/order_none.png" />
                        <view class="message">
                            <block wx:if="{{state.isQuestion}}">{{'您还没有发布过问题，去提问吧~'}}</block>
                            <block wx:elif="true">{{'您还没有发布过回答，去回答吧~'}}</block>
                        </view>
                    </view>
                </view>
            </block>
            <block wx:if="{{state.navBtnActiveIndex === 1 || state.navBtnActiveIndex === 2}}">
                <view class="all-question" style="{{props['style9751'] }}">
                    <block wx:for="{{state.data}}" wx:for-item="item" wx:for-index="i4915" wx:key="*this">
                        <view bindtap="dispatchEvent" class="question-item" data-tap-uid="{{'e131_39_' + i4915}}" data-beacon-uid="default" style="{{props['style10203' + i4915] }}">
                            <view class="quest-title">
                                <block wx:if="{{item.isRemark}}"><text class="remark {{item.remark === '最新' ? 'new' : item.remark === '置顶' ? 'stick' : 'hot'}}">{{item.remark}}</text></block><text class="{{item.isRemark ? 'width' : ''}} title">{{item.title}}</text>
                            </view><text class="desc hide-text">{{item.desc}}</text>
                            <view class="other-message">
                                <view class="other-message-item">
                                    <image class="eye image" src="../../../../assets/image/eye.png" /><text class="eye-text text">{{item.seeNum}}</text></view>
                                <view class="other-message-item">
                                    <image class="image" src="../../../../assets/image/message.png" /><text class="text">{{item.commentNum}}</text></view>
                            </view>
                        </view>
                    </block>
                </view>
            </block>
        </view>
    </view>
