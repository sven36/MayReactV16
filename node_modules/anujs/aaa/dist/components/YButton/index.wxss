@import './assets/style/variables.wxss';

@import './assets/style/common.wxss';

.anu-button {
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  border-radius: 6px;
  position: relative;
}

.anu-button__mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  opacity: 0;
}

.anu-button__loading--hidden {
  display: none;
}

.anu-button__label {
  font-size: 16px;
}

.anu-button__label--mini {
  font-size: 12px;
}

.anu-button__loading {
  width: 14px;
  height: 14px;
  margin-right: 12px;
}

.anu-button__loading--mini {
  width: 10px;
  height: 10px;
  margin-right: 8px;
}

.anu-button--default {
  background-color: #eee;
  border: 1px solid #e6e6e6;
}

.anu-button__label--default {
  color: rgba(0, 0, 0, 0.95);
}

.anu-button--primary {
  background-color: #ff9800;
  border: 1px solid #f08f00;
}

.anu-button__label--primary {
  color: #fff;
}

.anu-button--secondary {
  background-color: #00bcd4;
  border: 1px solid #00aec5;
}

.anu-button__label--secondary {
  color: #fff;
}

.anu-button--warn {
  background-color: #f5222d;
  border: 1px solid #f4131f;
}

.anu-button__label--warn {
  color: #fff;
}

.anu-button--default-plain {
  border: 1px solid rgba(0, 0, 0, 0.6);
  background-color: transparent;
}

.anu-button__label--default-plain {
  color: rgba(0, 0, 0, 0.6);
}

.anu-button--primary-plain {
  border: 1px solid #ff9800;
  background-color: transparent;
}

.anu-button__label--primary-plain {
  color: #ff9800;
}

.anu-button--secondary-plain {
  border: 1px solid #00bcd4;
  background-color: transparent;
}

.anu-button__label--secondary-plain {
  color: #00bcd4;
}

.anu-button--warn-plain {
  border: 1px solid #f5222d;
  background-color: transparent;
}

.anu-button__label--warn-plain {
  color: #f5222d;
}

.anu-button--active {
  opacity: 0.6;
}

.anu-button--disabled {
  opacity: 0.4;
}